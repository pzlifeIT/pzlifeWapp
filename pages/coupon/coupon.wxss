}
.getCoupon{
	width: 690rpx;
	height: 80rpx;
	background: #fff;
	display: flex;
	/* justify-content: center; */
	align-items: center;
	padding: 0 30rpx;
	position: relative;
	margin-top: 2rpx;
}
.coupon-icon{
	width: 40rpx;
	height: 32rpx;
}
.get-text{
