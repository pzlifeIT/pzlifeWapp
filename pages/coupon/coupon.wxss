	width: 15rpx;
	height: 15rpx;
	position: absolute;
	z-index: 10;
	/* border: 1rpx solid red; */
	background: #F7F7F7;
}
.left .top-right{
	right: 0rpx;
	top: 0rpx;
	border-radius: 0 0 0 20rpx;
}
.left .bottom-right{
	right: 0rpx;
	bottom: 0rpx;
	border-radius:20rpx 0 0 0;
}
.mid .top-left{
	left: 0rpx;
	top: 0rpx;
	border-radius: 0 0 20rpx 0 ;
}
.mid .bottom-left{
	left: 0rpx;
	bottom: 0rpx;
	border-radius: 0 20rpx 0 0;
}
.used{
	background: #ddd;
	padding:48rpx 0 0 35rpx;
	height: 132rpx;
}
.over .symbol,.over .price{
