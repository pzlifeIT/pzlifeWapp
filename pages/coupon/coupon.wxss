/* pages/coupon/coupon.wxss */

page{
	width: 100%;
	height: 100%;
	background: #F7F7F7;
}
.head{
	width: 100%;
	height: 86rpx;
	background: #fff;
	margin-bottom: 10rpx;
	margin-top: 2rpx;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 99;
}
.state-text{
	height: 86rpx;
	width: 33.33%;
	float: left;
	text-align: center;
	line-height: 86rpx;
	color: #404040;
	font-size: 30rpx;
}
.active{
	color: #E61F18;
}
.line{
	width: 33.33%;
	height: 2rpx;
	position: absolute;
	bottom: 0;
	display: block;
	background-color: transparent;
	transition: all .3s ease-in-out;
}
.line s{
	width: 134rpx;
	height: 2rpx;
	margin: 0 auto;
	background: #E61F18;
	display: block;
}
.state-text:nth-of-type(1).active~.line{
	transform: translate3d(0,0,0);
}
.state-text:nth-of-type(2).active~.line{
	transform: translate3d(100%,0,0);
}
.state-text:nth-of-type(3).active~.line{
	transform: translate3d(200%,0,0);
}
.convert{
	width: 100%;
	height: 112rpx;
	background: #fff;
	margin-top: 90rpx;
	justify-content: center;
	display: flex;
}
.convert-input{
	width: 470rpx;
	height: 64rpx;
	border: 1rpx solid #B6B6B6;
	display: inline-block;
	margin-top: 26rpx;
	font-size: 30rpx;
	padding-left: 20rpx;
}
.button-convert{
	display: inline-block;
	width: 160rpx;
	height: 64rpx;
	background: #B6B6B6;
	border-radius: 2rpx;
	font-size: 30rpx;
	color: #fff;
	text-align: center;
	line-height: 64rpx;
	margin-left: 60rpx;
	margin-top: 26rpx;
}
.place{
