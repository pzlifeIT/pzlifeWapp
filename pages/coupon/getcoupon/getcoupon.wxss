/* pages/coupon/coupon.wxss */

page{
	width: 100%;
	/* height: 100%; */
	background: #F7F7F7;
}
.head{
	width: 100%;
	height: 86rpx;
	background: #fff;
	margin-bottom: 10rpx;
	margin-top: 2rpx;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 99;
}
.state-text{
	height: 86rpx;
	width: 50%;
	float: left;
	text-align: center;
	line-height: 86rpx;
	color: #404040;
	font-size: 30rpx;
}
.active{
	color: #E61F18;
}
.line{
	width: 50%;
	height: 2rpx;
	position: absolute;
	bottom: 0;
	display: block;
	background-color: transparent;
	transition: all .3s ease-in-out;
}
.line s{
	width: 134rpx;
	height: 2rpx;
	margin: 0 auto;
	background: #E61F18;
	display: block;
}
.state-text:nth-of-type(1).active~.line{
	transform: translate3d(0,0,0);
}
.state-text:nth-of-type(2).active~.line{
	transform: translate3d(100%,0,0);
}
.state-text:nth-of-type(3).active~.line{
	transform: translate3d(200%,0,0);
}
.convert{
	width: 100%;
	height: 112rpx;
	background: #fff;
	margin-top: 90rpx;
	justify-content: center;
	display: flex;
}
.convert-input{
	width: 470rpx;
	height: 64rpx;
	border: 1rpx solid #B6B6B6;
	display: inline-block;
	margin-top: 26rpx;
	font-size: 30rpx;
	padding-left: 20rpx;
}
.button-convert{
	display: inline-block;
	width: 160rpx;
	height: 64rpx;
	background: #B6B6B6;
	border-radius: 2rpx;
	font-size: 30rpx;
	color: #fff;
	text-align: center;
	line-height: 64rpx;
	margin-left: 60rpx;
	margin-top: 26rpx;
}
.place{
	font-size: 30rpx;
	color: #888;
}
.coupon-list{
	margin-top: 141rpx;
	display: flex;
	display: -webkit-flex;
	flex-direction: column;
	align-items: center;
}
.getCoupon{
	width: 690rpx;
	height: 80rpx;
	background: #fff;
	display: flex;
	/* justify-content: center; */
	align-items: center;
	padding: 0 30rpx;
	position: relative;
	margin-top: 2rpx;
}
.coupon-icon{
	width: 40rpx;
	height: 32rpx;
}
.get-text{
	color: #404040;
	font-size: 30rpx;
	margin-left: 10rpx;
}
.jt-icon{
	width: 13rpx;
	height: 23rpx;
	position: absolute;
	right: 20rpx;
}
.coupon{
	width: 710rpx;
	height: 221rpx;
	margin-top: 20rpx;
	position: relative;
	box-shadow:  5rpx 5rpx 20rpx  rgba(0,0,0,.2);
	border-radius: 20rpx;
}
.left{
	width: 624rpx;
	height: 100%;
	background: #fff;
	border-radius: 20rpx;
	margin-right: 2rpx;
	text-align: center;
	position: absolute;
	left: 0rpx;
	top: 0;
	z-index: 10;
}
.left-top{
	width: 100%;
	display: flex;
	align-items: center;
}
.lt-left{
	width: 206rpx;
	margin-left: 10rpx;
	position: relative;
}
.left-bottom{
	color: #e61f18;
	font-size: 26rpx;
	text-align: center;
	width: 100%;
}
.symbol{
	color: #e61f18;
	font-size: 34rpx;
	font-weight: bold;
	position: absolute;
	top: 30rpx;
	right: 0;
}
.price{
	color: #e61f18;
	font-size: 120rpx;
	font-weight: bold;
}
.left .rule{
	color: #404040;
	font-size: 26rpx;
	/* margin-top: 12rpx; */
}
.lt-mid{
	width: 0rpx;
	height: 110rpx;
	border: 1rpx solid #c86076;
	margin-left: 10rpx;
}
.lt-right{
	padding-left: 29rpx;
  padding-right: 20rpx;
	box-sizing: border-box;
  max-width: 400rpx;
}
.coupon-title,.coupon-desc{
	color: #666666;
	font-size: 30rpx;
	text-align: left;
}
.coupon-desc{
	margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.right{
	width: 126rpx;
	height: 100%;
	background-image: linear-gradient(-90deg,
	#8299ff 0%,
	#8299ff 60%,
	#5274f5 100%);

	color: #fff;
	font-size: 28rpx;
	writing-mode: vertical-lr;
	padding:48rpx 0 0 60rpx ;
	border-radius: 0 20rpx 20rpx 0;
	box-sizing: border-box;
	position: absolute;
	right: 0;
	top: 0;
	/*text-align: center;*/
}

.left-circle,.right-circle{
	width: 46rpx;
	height: 46rpx;
	background: #f7f7f7;
	border-radius: 50%;
	position: absolute;
	top: 79rpx;
}
.left-circle{
	left: -23rpx;
	box-shadow:  0 5rpx 20rpx  rgba(200,200,200,.3) inset;
}
.right-circle{
	right: -23rpx;
	background: #8299ff;
}
.used{
	color: #d6d6d6;
}
.bg-used{
	background: #d6d6d6;
	color: #fff;
}
.none{
	padding: 75rpx 0 0 65rpx;
}
.over .symbol,.over .price{
	color: #ddd;
}
.not{
	width: 100%;
	height: 70%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 500rpx;
}
.not-coupon{
	width: 208rpx;
	overflow: hidden;
}
.not-coupon image{
	width: 208rpx;
	height: 140rpx;
	margin-bottom: 32rpx;
}
.not-coupon .not-text{
	text-align: center;
	color: #888;
	font-size: 28rpx;
	margin-bottom: 19rpx;
}
.not-coupon .button{
	width: 204rpx;
	height: 66rpx;
	border: 1rpx solid #E61F18;
	text-align: center;
	line-height: 68rpx;
	color: #E61F18;
	font-size: 28rpx;
}
.bcolor{
    background: #ff7749;
}