/* pages/coupon/getcoupon/getcoupon.wxss */
page{
	width: 100%;
	height: 100%;
	background: #F7F7F7;
}
.top{
	width: 750rpx;
	height: 100rpx;
	display: flex;
	align-items: center;
	background: #fff;
	margin-bottom: 10rpx;
}
.top input{
	width: 450rpx;
	height: 64rpx;
	border: 1rpx solid #B6B6B6;
	border-radius: 2rpx;
	font-size: 30rpx;
	margin-left: 30rpx;
	padding-left: 20rpx;
}
.button{
	width: 160rpx;
	height: 64rpx;
	text-align: center;
	line-height: 64rpx;
	background: #B6B6B6;
	color: #fff;
	font-size: 30rpx;
	margin-left: 60rpx;
}
.coupon{
	width: 708rpx;
	height: 178rpx;
	margin-left: 20rpx;
	display: flex;
	justify-content: center;
	margin-bottom: 10rpx;
}
.left{
	width: 192rpx;
	height: 178rpx;
	background: #fff;
	display: inline-block;
	text-align: center;
	position: relative;
	margin-right: 2rpx;
}
.price{
	color: #E61F18;
	font-size: 80rpx;
	margin-top: 20rpx;
}
.symbol{
	font-size: 22rpx;
}
.rule{
	font-size: 26rpx;
	color: #404040;
}
.right-top,.right-bottom,.left-top,.left-bottom{
	width: 20rpx;
	height: 20rpx;
	position: absolute;
	/* border: 1rpx solid red; */
	background: #F7F7F7;
}
.right-top{
	right: 0rpx;
	top: 0rpx;
	border-radius: 0 0 0 20rpx;
}
.right-bottom{
	right: 0;
	bottom: 0;
	border-radius: 20rpx 0 0 0;
}
.mid{
	width:366rpx;
	height: 178rpx;
	background: #fff;
	padding-left: 40rpx;
	display: inline-block;
	position: relative;
}
.mid .title{
	color: #404040;
	font-size: 30rpx;
	margin-top: 34rpx;
}
.mid .subtitle{
	color:#666666;
	font-size: 24rpx;
	margin-top: 12rpx;
}
.mid .time{
	color: #666;
	font-size: 24rpx;
	margin-top: 12rpx;
}
.left-top{
	left: 0;
	top: 0;
	border-radius: 0 0 20rpx 0;
}
.left-bottom{
	left: 0;
	bottom: 0;
	border-radius: 0 20rpx 0 0;
}
.right{
	width: 110rpx;
	height: 178rpx;
	color: #FFFEFF;
	font-size: 28rpx;
	background: #E61F18;
	writing-mode: vertical-lr;
}
.right view{
	margin-left: 39rpx;
	margin-top: 33rpx;
}
.active{
	background: #E61F18;
}
.not{
	width: 750rpx;
	height: 80%;
	justify-content: center;
	display: flex;
	align-items: center;
}
.icon-button{
	width: 226rpx;
	height: 355rpx;
}
.icon-button image{
	width: 208rpx;
	height: 140rpx;
	margin-bottom: 30rpx;
}
.not-text{
	width: 208rpx;
	color: #B6B6B6;
	font-size: 28rpx;
	text-align: center;
	margin-bottom: 30rpx;
}
.not-button{
	width: 208rpx;
	height: 68rpx;
	color: #fff;
	background: #E61F18;
	font-size: 28rpx;
	text-align: center;
	line-height: 68rpx;
}
.use{
	background: #F99F36;
}
.footer{
	width: 750rpx;
	height: 92rpx;
	text-align: center;
	line-height: 92rpx;
	background: #E61F18;
	color: #fff;
	font-size: 28rpx;
	position: fixed;
	bottom: 0;
}