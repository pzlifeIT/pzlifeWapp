/* pages/freightHouse/freightHouse.wxss */

page {
    height: 100%;
    background-color: #f7f7f7;
    overflow: auto;
}

.fh-header {
    position: fixed;
    width: 750rpx;
    /* height: 150rpx; */
    background-color: #f99f36;
    overflow: auto;
    z-index: 10;
}

.fixed {
    width: 100%;
    height: 165rpx;
}

.fh-search {
    margin-top: 20rpx;
    overflow: auto;
}

.fh-inpbox {
    width: 625rpx;
    height: 60rpx;
    margin-left: 20rpx;
    background-color: #ffffff;
    border-radius: 2rpx;
}

.search {
    margin: 15rpx 10rpx 14rpx;
}

.fh-inp {
    width: 525rpx;
    height: 100%;
    background-color: #fff;
    font-size: 30rpx;
    color: #404040;
}

.fh-inp::placeholder {
    color: #b6b6b6;
}

.fh-searchbtn {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background-color: transparent;
}

.fh-nav {
    position: relative;
    color: #fefefe;
    overflow: auto;
}

.nav-btn {
    width: 50%;
    line-height: 70rpx;
    text-align: center;
    font-size: 30rpx;
}

.nav-btn.active {
    font-weight: bolder;
}

.wire {
    position: absolute;
    display: block;
    bottom: 0px;
    width: 50%;
    height: 6rpx;
    background-color: transparent;
    transition: all .3s ease-in-out;
}

.wire s {
    display: block;
    width: 150rpx;
    height: 6rpx;
    margin: 0 auto;
    background-color: #fff;
}

.nav-btn:nth-of-type(1).active~.wire {
    transform: translate3d(0, 0, 0);
}

.nav-btn:nth-of-type(2).active~.wire {
    transform: translate3d(100%, 0, 0);
}

.fh-li {
    margin-bottom: 10rpx;
    background-color: #fff;
    overflow: auto;
}

.fh-goodInfo {
    height: 130rpx;
    border-bottom: 2rpx solid #f7f7f7;
}

.gi-img {
    width: 90rpx;
    height: 90rpx;
    margin: 20rpx;
}

.gi-img .image {
    width: 100%;
    height: 100%;
}

.gi-info {
    width: 400rpx;
    font-size: 28rpx;
    color: #404040;
}

.gi-name {
    width: 100%;
    margin-top: 20rpx;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.gi-btn {
    width: 130rpx;
    height: 48rpx;
    line-height: 48rpx;
    margin: 42rpx 20rpx;
    text-align: center;
    background-color: #e61f18;
    border-radius: 2rpx;
    color: #fff;
    font-size: 28rpx;
}

.fh-sizelist {
    position: relative;
    margin-bottom: 20rpx;
    z-index: 1;
    color: #fff;
}

.triangle {
    position: absolute;
    top: 0;
    right: 0;
    width: 100rpx;
    height: 60rpx;
}

.triangle .image {
    display: block;
    width: 24rpx;
    height: 24rpx;
    margin: 18rpx auto;
}

.sl-name,
.sl-num,
.sl-tit {
    display: inline-block;
    width: 45%;
    line-height: 45rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    background-color: #fff;
}

.sl-tit {
    font-size: 24rpx;
    color: #666;
}

.sl-name {
    font-size: 26rpx;
    color: #202020;
}

.sl-num {
    font-size: 28rpx;
    color: #e61f18;
}

.fh-cate {
    width: 100%;
    height: calc(100% - 165rpx);
    overflow: auto;
    background-color: #fff;
}

.cate_content {
    height: 100%;
    overflow: auto;
}

.cate_left {
    width: 180rpx;
    height: 100%;
    float: left;
    overflow: auto;
}

::-webkit-scrollbar {
    width: 0px;
    height: 0px;
    color: transparent;
}

::-webkit-scrollbar-track {
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: #f7f7f7;
}

.cate_text {
    width: 180rpx;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 28rpx;
    color: #7E7E7E;
    margin-bottom: 1px;
    text-align: center;
    background-color: #F7F7F7;
    overflow: hidden;
}

.cate_text.active {
    color: #e61f18;
    border-left: #e61f18 solid 8rpx;
    background-color: #fff;
}

.cate_right {
    width: 530rpx;
    float: left;
    margin: 0 20rpx;
    height: 100%;
    overflow: auto;
}

.cate_two {
    width: 100%;
    overflow: auto;
    /* height: 80%; */
    /* margin-bottom: 20rpx; */
}

.wai {
    width: 100%;
    float: left;
    margin-top: 20rpx;
}

.cate_title {
    font-size: 28rpx;
    color: #202020;
    display: inline-block;
    background: #fff;
    width: 150rpx;
}

.cate_three {
    width: 166rpx;
    float: left;
    margin: 5rpx 5rpx;
}

.cate_banner {
    display: inline-block;
    float: left;
    width: 113rpx;
    height: 113rpx;
    margin: 0 27rpx;
}

.cate_three_title {
    display: inline-block;
    width: 100%;
    font-size: 26rpx;
    color: #666;
    text-align: center;
}

.sub_title {
    text-align: center;
    position: relative;
    margin: 20rpx 0;
}

.sub_title::after {
    border-bottom: 2rpx solid #F7F7F7;
}

.line {
    width: 70%;
    height: 2rpx;
    background: #B6B6B6;
    opacity: 0.3;
    margin: 0 auto;
    position: absolute;
    top: 55%;
    left: 15%;
    z-index: -1;
}