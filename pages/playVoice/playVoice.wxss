/* pages/playVoice/playVoice.wxss */
page{
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.voice-play{
    width: 750rpx;
    position: absolute;
    bottom: 36rpx;
    z-index: 99;
    background: rgba(0, 0, 0, .5)
}
.name{
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    margin: 35rpx 0;
}
.audio{
    width: 750rpx;
    height: 400rpx;
}
.center{
    width: 750rpx;
    height: 750rpx;
    overflow: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.bg{
    width: 750rpx;
    height: 750rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.voice{
    width: 750rpx;
    position: absolute;
    bottom: 36rpx;
    z-index: 99;
}
.continue{
    display: flex;
    justify-content: center;
    align-items: center;
}
.progress{
    display: inline-block;
    width: 500rpx;
    margin: 0 26rpx;
}
.duration:nth-of-type(1),.duration:nth-of-type(2){
    font-size: 24rpx;
    color: #efefef;
}
.buttons{
    width: 750rpx;
    padding: 0 70rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 26rpx;
}
.icon1{
    width: 55rpx;
    height: 46rpx;
}
.icon2{
    width: 42rpx;
    height: 52rpx;
}
.icon3{
    width: 74rpx;
    height: 74rpx;
}
.icon4{
    width: 42rpx;
    height: 52rpx;
}
.icon5{
    width: 47rpx;
    height: 57rpx;
}
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 99;
}
.df{
    display: flex;
    justify-content: center;
    align-items: center;
}
.mask-center{
    width: 587rpx;
    height: 636rpx;
    opacity: 1;
}
.mask-img-w{
    width: 587rpx;
    height: 115rpx;
    background: #E61F18;
}
.mask-img{
    width: 587rpx;
    height: 115rpx;
    display: block;
}
.mask-select{
    background: #FFFFFF;
    width:100%;
    font-size: 38rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
}
.radio{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #f7f7f7;
}
radio{
    transform: scale(0.8);
}
.mask-button{
    width: 100%;
    height: 169rpx;
    background: #FFFFFF;
}
.mask-left{
    width: 213rpx;
    height: 82rpx;
    background: #E61F18;
    color: #FFFFFF;
    text-align: center;
    line-height: 82rpx;
    margin: 32rpx 54rpx 0 52rpx;
    font-size: 48rpx;
    border-radius: 10rpx;
    display: inline-block;
}
.mask-right{
    width: 213rpx;
    height: 82rpx;
    background: #f99f36;
    border-radius: 10rpx;
    color: #fff;
    text-align: center;
    line-height: 82rpx;
    font-size: 48rpx;
    display: inline-block;
}
.listWhile{
    width: 58rpx;
    height: 58rpx;
}
