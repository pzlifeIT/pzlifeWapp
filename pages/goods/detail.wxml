<!--pages/goods/detail.wxml-->
<view class="detail-swiper" >
  <swiper  autoplay='true' interval='3000' bindchange="changeSwiper" circular='true'>
    <block>
      <swiper-item wx:for="{{goodInfo.goods_banner}}">
        <image class='swiper-img' src='{{item.image_path}}'></image>
        
      </swiper-item>
    </block>
  </swiper>
  <view class='swipercur'>{{swipercur}}/{{goodInfo.goods_banner.length}}</view>
</view>


<view class='desc'>
  <view class='text'>
    <text class='title'>{{goodInfo.goods_data.goods_name}}</text>
    <text class='subtitle'>{{goodInfo.goods_data.subtitle}}</text>
    <text class='price'>￥{{goodInfo.goods_data.title}}</text>
  </view>
  <view class='collect'>
    <icon type=''></icon>
    <text >收藏</text>
  </view>
</view>

<view class='content'>
  <view class='spec' bindtap='showModel'>
    <text class='fix'>已选择：</text><text class='fix_desc'>500g;x1</text>
  </view>
  <!-- <view class='ticket'>
    <text class='fix'>领券：</text><text class='fix_desc'>全场满39减9</text>
  </view> -->
  <view class='integral'>
    <text class='fix'>积分：</text><text class='fix_desc'>赠送48积分</text>
  </view>
  <view class='freight'>
    <text class='fix'>运费：</text><text class='fix_desc'>{{goodInfo.goods_data.supplier_desc}}</text>
  </view>
</view>
<!-- 选择规格弹出层 -->
 <view class="popout" wx:if='{{showModel}}'>
  <view class='mask' catchtouchmove='preventTouchMove' bindtap='hideModel' ></view>
  <view class='pop'>
    <view class='goods_data' >
      <view class='goods_thumb fl'>
        <image src='{{goodData.sku_image}}' wx:if="{{buy}}"></image>
        <image src='{{goodInfo.goods_data.image}}' wx:else></image>
      </view>
      <view class='goods_desc fl' wx:if="{{repertory}}">
        <text class='pop_price' wx:if="{{buy}}">价格：￥{{goodData.sku_price}}</text>
        <text class='pop_price' wx:else >价格：￥{{goodInfo.goods_data.max_retail_price}}-￥{{goodInfo.goods_data.min_retail_price}}</text>
        <text class='selected'>已选择：M\r\t黑色</text>
        <text class='present'>赠送积分：178分</text>
      </view>
      <view class='goods_desc fl' wx:else>
        <text class='pop_price'>暂无库存</text>
      </view>
    </view>
    <view class='param'>
      <view  wx:for="{{goodInfo.goods_spec}}" wx:for-index="idx" wx:key="{{item.id}}">
      <view class='spec_name'><text>{{item.spe_name}}</text></view>
      <view class='attr'>
        <view wx:for="{{item.list}}" wx:for-item="item1" class='attr_name {{ item1.id == attr[idx]?"active":"" }}'  wx:key="{{item1.id}}"  bindtap='selectAttr' data-idx='{{idx}}'  data-id="{{item1.id}}">{{item1.attr_name}}</view>
      </view>
    </view>
  </view>

  <view class='amount'>
    <view class='num_title'>数量</view>
    <view class='amount_num'>
    <view class='jian' bindtap='jian'>-</view><input class='num' disabled type='text' value='{{buyNum}}' bindinput='getnum' /><view class='jia' bindtap='jia'>+</view>
    </view>
    </view>
  </view>
 </view>
