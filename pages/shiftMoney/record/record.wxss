/* pages/shiftMoney/record/record.wxss */

page {
    background-color: #f7f7f7;
    font-size: 28rpx;
    height: 100%;
}

.rd-list {
    width: 750rpx;
    margin-top: 10rpx;
    padding: 10rpx 0;
    background-color: #fff;
}

.rd-li {
    line-height: 50rpx;
}

.rd-li-tit {
    margin-left: 20rpx;
    color: #666;
}

.rd-li-con {
    float: right;
    margin-right: 20rpx;
    color: #404040;
}
.null{
    width: 750rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.center{
    width: 360rpx;
    height: auto;
    overflow: auto;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.center image{
    width: 192rpx;
    height: 200rpx;
    margin-bottom: 48rpx;
}
.null-text{
    color: #d6d6d6;
    font-size: 28rpx;
    width: 100%;
    text-align: center;
    margin-bottom: 77rpx;
}
.go{
    width: 100%;
    height: auto;
    position: relative;
}
.bg{
    width: 100%;
    height: 18rpx;
    background: #f9e4e4;
    position: absolute;
    bottom: 0;
    z-index: -1;
}
.go-way{
    color: #8f8f8f;
    font-size: 36rpx;
    display: inline-block;
    margin-left: 27rpx;
}
.go-text{
    color: #e61f18;
    font-size: 36rpx;
    display: inline-block;
    margin-left: 66rpx;
}
.go image{
    width: 60rpx;
    height: 41rpx;
    margin-bottom: 0;
    float: right;
}
.footer{
    width: 460rpx;
    height: 80rpx;
    background: #fff;
    border: 1px solid #e61f18;
    border-radius: 15rpx;
    box-shadow: 3rpx 4rpx 6rpx rgba(0,0,0,0.16);
    font-size: 32rpx;
    color: #E61F18;
    text-align: center;
    line-height: 80rpx;
    position: fixed;
    bottom: 200rpx;
    left: 145rpx;
    z-index: 99;
}