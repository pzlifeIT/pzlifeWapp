<!--pages/boss/boss.wxml-->
<view class="background">
	<view class="boss-info">
		<view class="head-img">
			<image lazy-load="true" src="{{head}}"></image>
		</view>
		<view class="nickname">
			<view class="name">{{bossname}}</view>
			<view class="identity">合伙人</view>
			<!--<view class="shop-id">店铺ID：122345</view>-->
		</view>
	</view>
	<image lazy-load="true" class="sz" src="{{imgHost}}sz.png"></image>
</view>
<view class="asset">
	<view class="asset-title">
		资产中心
	</view>
	<view class="line"></view>
</view>
<view class="case">
	<view class="case-title">
		<view class="shu"></view>
		商票
	</view>
	<view class="case-info">
		<view class="case-total">
			<view class="total-text">商票总额<text>(元)</text>
				<image lazy-load="true" catchtap="pop" data-type="1" src="{{imgHost}}wh_03.png"></image>
			</view>
			<view class="total-price">{{boss.balance_all}}</view>
		</view>
		<view class="three-div">
			<view class="one-div oneone" bindtap="case" data-i="3">
				<view class="total-div">商票余额<text>(元)</text></view>
				<view class="total-div">{{boss.balance}}</view>
			</view>
			<view class="one-div two" bindtap="case" data-i="2">
				<view class="total-div">待入账商票<text>(元)</text></view>
				<view class="total-div">{{boss.balance_not_settlement}}</view>
			</view>
			<view class="one-div three" bindtap="case" data-i="1">
				<view class="total-div">已使用商票<text>(元)</text></view>
				<view class="total-div">{{boss.balance_use}}</view>
			</view>
		</view>
	</view>
</view>
<view class="case">
	<view class="case-title">
		<view class="shu"></view>
		经营性收益
	</view>
	<view class="case-info">
		<view class="case-total">
			<view class="total-text">经营性收益总额<text>(元)</text><image  catchtap="pop" data-type="2" lazy-load="true" src="{{imgHost}}wh_03.png"></image></view>
			<view class="total-price">{{boss.bonus}}</view>
		</view>
		<view class="three-div">
			<view class="one-two-div two-one"  catchtap="earning" data-earn="1">
				<view class="total-div">上月收益<text>(元)</text></view>
				<view class="total-div">{{boss.prebonus}}</view>
			</view>
			<view class="one-two-div two-two"  catchtap="earning" data-earn="2">
				<view class="total-div">本月收益<text>(元)</text></view>
				<view class="total-div">{{boss.tobonus}}</view>
			</view>
		</view>
	</view>
</view>

<view class="jf">
	<view class="left">
		<view class="jifen">积分</view>
		<view class="jf-num">{{boss.integral}}</view>
	</view>
	<view class="mid"></view>
	<view class="left" bindtap="join">
		<view class="earnings" >招商代理收益<text>(元)</text> <image class="earnings-img" catchtap="pop" data-type="3" lazy-load="true"  src="{{imgHost}}wh_03.png"></image></view>
		<view class="renshu"><text>{{boss.merchants}}</text></view>
	</view>
</view>

<view class="case">
	<view class="case-info">
		<view class="case-total commission">
			<view class="total-text">佣金总额<text>(元)</text><image  catchtap="pop" data-type="4" lazy-load="true" src="{{imgHost}}wh_03.png"></image></view>
			<view class="total-price">{{boss.commission}}</view>
		</view>
		<view class="jf commission-jf">
			<view class="left" bindtap="commission">
				<image  lazy-load="true" src="{{imgHost}}yj_03.png"></image>
				<view class="renshu">佣金提现</view>
			</view>
			<view class="mid"></view>
			<view class="left" bindtap="commission">
				<image  lazy-load="true" src="{{imgHost}}yj_06.png"></image>
				<view class="renshu">佣金转商票</view>
			</view>
		</view>
	</view>
</view>
	<view class="icon">
		<view class="one icon-after">
			<image lazy-load="true" src="{{imgHost}}dpgl_10.png"></image>
			<view class="icon-text">店铺发券</view>
		</view>
		<view class="one icon-after">
			<image lazy-load="true" src="{{imgHost}}dpgl_12.png"></image>
			<view class="icon-text">商品货仓</view>
		</view>
		<view class="one">
			<image lazy-load="true" src="{{imgHost}}dpgl_07.png"></image>
			<view class="icon-text">开店邀请</view>
		</view>
		<view class="one icon-after">
			<image lazy-load="true" src="{{imgHost}}dpgl_17.png"></image>
			<view class="icon-text">社交圈</view>
		</view>
		<view class="one icon-after">
			<image lazy-load="true" src="{{imgHost}}dpgl_18.png"></image>
			<view class="icon-text">现金券</view>
		</view>
	</view>
<!--弹窗-->
<view class="mask" catchtouchmove='preventTouchMove' wx:if="{{popCase || popShouyi || popYongjin || popJoin}}">
	<view class="hint">
		<view class="hint-text">
			<view class="hint-title">{{title}}</view>
			<view class="hint-content">{{content}}</view>
		</view>
		<view class="know" bindtap="know">我知道了</view>
	</view>
</view>