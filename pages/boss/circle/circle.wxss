/* pages/boss/circle/circle.wxss */

page {
    background-color: #f7f7f7;
}

.circle-header {
    width: 100%;
    /* height: 415rpx; */
    color: #fff;
    overflow: auto;
}

.ch-statistics {
    position: relative;
    height: 260rpx;
    text-align: center;
    background-color: transparent;
    overflow: auto;
}

.circleback {
    position: absolute;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 260rpx;
    z-index: -1;
}

.ct-text {
    margin-top: 35rpx;
    font-size: 30rpx;
}

.ct-num {
    margin-top: 5rpx;
    font-size: 48rpx;
}

.ch-half {
    display: inline-block;
    width: 50%;
}

.ch-name {
    margin-top: 20rpx;
    font-size: 28rpx;
}

.ch-num {
    font-size: 36rpx;
}

.unit::after {
    content: '（人）';
    font-size: 22rpx;
}

.ch-nav {
    position: relative;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    overflow: auto;
    color: #202020;
    text-align: center;
    font-size: 30rpx;
    background-color: #fff;
    box-shadow: 0px 2px 5px #d3d3d3;
}

.ch-nav-btn {
    display: inline-block;
    float: left;
    width: 50%;
}

.ch-nav-btn.active {
    color: #e61f18;
}

.wire {
    position: absolute;
    display: block;
    bottom: 0px;
    width: 50%;
    height: 2rpx;
    background-color: transparent;
    transition: all .3s ease-in-out;
}

.wire s {
    display: block;
    width: 150rpx;
    height: 2rpx;
    margin: 0 auto;
    background-color: #e61f18;
}

.ch-nav-btn:nth-of-type(1).active~.wire {
    transform: translate3d(0, 0, 0);
}

.ch-nav-btn:nth-of-type(2).active~.wire {
    transform: translate3d(100%, 0, 0);
}

.ch-explain {
    width: 710rpx;
    height: 64rpx;
    line-height: 64rpx;
    background-color: #ffffff;
    border-radius: 4rpx;
    margin: 10rpx 20rpx 0;
    font-size: 26rpx;
    color: #404040;
}

.ch-explain text {
    text-align: center;
}

.ce-name {
    width: 240rpx;
}

.ce-diamond {
    width: 250rpx;
    text-align: left;
}

.ce-socialite {
    width: 220rpx;
}

.ce-buyer {
    width: 50%;
}

.ce-diamond.unit::after,
.ce-buyer.unit::after,
.ce-socialite.unit::after {
    content: "(人)";
}

.bottom-wire {
    width: 100%;
    height: 1rpx;
    background-color: #e0e0e0;
    box-shadow: 0px 1px 0px #f5f5f5;
}

.diamond-list {
    background-color: #fff;
    overflow: auto;
}

.diamond-li {
    width: 750rpx;
    height: 130rpx;
    line-height: 130rpx;
    color: #404040;
}

.diamond-li .image {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    margin: 17rpx 12rpx 15rpx 20rpx;
    background-color: #000;
}

.diamond-li .dl-name {
    width: 180rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.diamond-li .dl-diamond {
    width: 200rpx;
    font-size: 34rpx;
    text-align: center;
}

.diamond-li .dl-socialite {
    width: 200rpx;
    font-size: 34rpx;
    text-align: center;
}

.dl-buyer-name {
    width: 280rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.dl-buyer-num {
    width: 300rpx;
    font-size: 34rpx;
    text-align: center;
}