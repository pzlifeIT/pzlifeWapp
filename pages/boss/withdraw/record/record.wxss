/* pages/boss/withdraw/record/record.wxss */
page{
    background-color: #f7f7f7;
    height: 100%;
}
.heard{
    width: 750rpx;
    height: 86rpx;
    /*margin-top: 2rpx;*/
    position: fixed;
    top: 0;
}
.div{
    width: 50%;
    height: 100%;
    text-align: center;
    line-height: 86rpx;
    color: #404040;
    font-size: 30rpx;
    display: inline-block;
    background-color: #FFFFFF;
}
.active{
    background-color: #e61f18;
    color: #FFFFFF;
}
.list{
    width: 750rpx;
    margin-top: 96rpx;
}
.list-one{
    width: 750rpx;
    height: auto;
    overflow: auto;
    padding: 30rpx 23rpx 12rpx 21rpx;
    box-sizing: border-box;
    background-color: #FFFFFF;
}
.line{
    width: 706rpx;
    height: auto;
    overflow: auto;
    margin-bottom: 17rpx;
}
.left{
    color:#666666;
    font-size: 28rpx;
    float: left;
    text-align: left;
}
.right{
    color: #404040;
    font-size: 28rpx;
    float: right;
    text-align: right;
}
.bill-info{
    width: 750rpx;
    /*height: 360rpx;*/
    padding: 29rpx 30rpx 12rpx 19rpx;
    box-sizing: border-box;
    background-color: #FFFFFF;
}
.info-title{
    color: #202020;
    font-size: 30rpx;
    display: inline-block;
    margin-bottom: 28rpx;
}
text{
    display: inline-block;
}
.info-line{
    color: #666666;
    font-size: 28rpx;
    margin-bottom: 16rpx;
    display: flex;
    justify-content: flex-start;
}
.line-title{
   display: flex;
    width: 140rpx;
    justify-content: space-between;
}
.text{
    color: #202020;
    text-align: justify;
    display: inline-block;
    width: 553rpx;
}
.billTitle{
    width: 750rpx;
    height: 134rpx;
    background-color: #FFFFFF;
    margin: 10rpx 0;
    padding: 30rpx 0 21rpx 20rpx;
    box-sizing: border-box;
}
.title-title{
    color: #202020;
    font-size: 30rpx;
   margin-bottom: 18rpx;
}
.tt{
    color: #666666;
    font-size: 28rpx;
}
.tt text{
    color: #202020;
}
.fp{
    width: 645rpx;
    height: 372rpx;
    margin-left: 31rpx;
}
.null{
    width: 750rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.center{
    width: 360rpx;
    height: auto;
    overflow: auto;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.center image{
    width: 192rpx;
    height: 200rpx;
    margin-bottom: 48rpx;
}
.null-text{
    color: #d6d6d6;
    font-size: 28rpx;
    width: 100%;
    text-align: center;
}
.go{
    width: 100%;
    height: auto;
    position: relative;
    margin-top: 43rpx;
}
.bg{
    width: 100%;
    height: 18rpx;
    background: #f9e4e4;
    position: absolute;
    bottom: 0;
    z-index: -1;
}
.go-way{
    color: #8f8f8f;
    font-size: 36rpx;
    display: inline-block;
    margin-left: 27rpx;
}
.go-text{
    color: #e61f18;
    font-size: 36rpx;
    display: inline-block;
    margin-left: 66rpx;
}
.go image{
    width: 60rpx;
    height: 41rpx;
    margin-bottom: 0;
    float: right;
}
.footer{
    width: 460rpx;
    height: 80rpx;
    background: #fff;
    border: 1px solid #e61f18;
    border-radius: 15rpx;
    box-shadow: 3rpx 4rpx 6rpx rgba(0,0,0,0.16);
    font-size: 32rpx;
    color: #E61F18;
    text-align: center;
    line-height: 80rpx;
    position: fixed;
    bottom: 200rpx;
    left: 145rpx;
    z-index: 99;
}
.long{
    margin-left: 26rpx;
}