/* pages/boss/case/case.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}
.title{
    width: 750rpx;
    height: 72rpx;
    text-align: center;
    line-height: 72rpx;
    color: #202020;
    font-size: 32rpx;
}
.one-detail{
    width: 750rpx;
    height: 180rpx;
    background-color: #FFFFFF;
    margin-bottom: 2rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 7rpx 0 9rpx ;
    box-sizing: border-box;
}
.detail-title{
    color: #202020;
    font-size: 30rpx;
    margin-bottom: 19rpx;
}
.detail-desc{
    color: #666;
    font-size: 24rpx;
    margin-bottom: 19rpx;
}
.detail-time{
    color: #666666;
    font-size: 24rpx;
}
.detail-case{
    height: 100%;
    width: auto;
    float: right;
    color: #404040;
    font-size: 28rpx;
    text-align: center;
    line-height: 180rpx;
}
.active{
    color: #E61F18;
}