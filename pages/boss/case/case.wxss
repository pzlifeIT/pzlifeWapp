/* pages/boss/case/case.wxss */
page{
    width: 100%;
    /*height: 100%;*/
    background-color: #f7f7f7;
}
.circle-header {
    width: 100%;
    /* height: 415rpx; */
    color: #fff;
    overflow: auto;
    position: fixed;
    top: 0;
    left: 0;
}

.ch-statistics {
    position: relative;
    height: 260rpx;
    text-align: center;
    background-color: #f99f36;
    overflow: auto;
}

.circleback {
    position: absolute;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 260rpx;
    z-index: -1;
}

.ct-text {
    margin-top: 35rpx;
    font-size: 30rpx;
}

.ct-num {
    margin-top: 5rpx;
    font-size: 48rpx;
}

.ch-half {
    display: inline-block;
    width: 352rpx;
    height: 95rpx;
    background: rgba(255,255,255,0.6);
    border-radius: 10rpx 10rpx 0 0;
    color: #666666;
    position: absolute;
    bottom: 0;
}
.selected{
    height: 110rpx;
    color: #202020;
}
.selected .ch-name{
    margin-top: 14rpx;
}
.ch-left{
    float: left;
    left: 20rpx ;
}
.ch-right{
    float: right;
    right: 20rpx;
}
.ch-name {
    margin-top: 7rpx;
    font-size: 28rpx;
}

.ch-num {
    font-size: 36rpx;
}

.unit::after {
    content: '（元）';
    font-size: 22rpx;
}
.title{
    width: 750rpx;
    height: 72rpx;
    text-align: center;
    line-height: 72rpx;
    color: #202020;
    font-size: 32rpx;
    margin-top: 260rpx;
}
.one-detail{
    width: 750rpx;
    height: auto;
    background-color: #FFFFFF;
    margin-bottom: 2rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 7rpx 0 9rpx ;
    box-sizing: border-box;
     
}
.detail-title{
    color: #202020;
    font-size: 30rpx;
    margin-bottom: 19rpx;
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.detail-desc{
    color: #666;
    font-size: 24rpx;
    margin-bottom: 19rpx;
}
.detail-time{
    color: #666666;
    font-size: 24rpx;
}
.detail-case{
    height: 100%;
    width: auto;
    float: right;
    color: #404040;
    font-size: 28rpx;
    text-align: center;
    line-height: 180rpx;
}
.active{
    color: #E61F18;
}
.not{
    width: 750rpx;
    height: 70%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 550rpx;
}
.not-case{
    width: 199rpx;
    overflow: hidden;
}
.not image{
    width: 199rpx;
    height: 138rpx;
    margin-bottom: 29rpx;
}
.not .text{
    width: 199rpx;
    overflow: hidden;
    text-align: center;
    color: #D6D6D6;
    font-size: 28rpx;
}