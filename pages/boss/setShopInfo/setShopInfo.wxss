/* pages/boss/setShopInfo/setShopInfo.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}
.text{
    width: 750rpx;
    height: 100rpx;
    background-color: #fff;
    display: flex;
    -webkit-display:flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rpx;
}
.text input{
    display: inline-block;
    width: 90%;
    height: 100%;
    color: #888888;
    font-size: 30rpx;
    padding-left: 10rpx;
}
icon{
    margin-right: 10rpx;
}
.footer{
    width: 750rpx;
    position: fixed;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.left{
    width: 50%;
    height: 92rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #d6d6d6;
    border-right: 1rpx solid #d6d6d6;
    text-align: center;
    line-height: 92rpx;
    color: #404040;
    font-size: 28rpx;
    background-color: #fff;
}
.right{
    width: 50%;
    height: 92rpx;
    background-color: #e61f18;
    text-align: center;
    line-height: 92rpx;
    color: #fff;
    font-size: 28rpx;
}
.area-text{
    height: 200rpx;
}
.area{
    width: 750rpx;
    height: 200rpx;
    padding-left: 10rpx;
    padding-top: 10rpx;
    box-sizing: border-box;
    color: #404040;
    font-size: 28rpx;
}