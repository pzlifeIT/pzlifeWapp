/* pages/boss/earnings/earnings.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #F7F7F7;
    position: fixed;
    top: 0;
}
.circle-header {
    width: 100%;
    /* height: 415rpx; */
    color: #fff;
    overflow: auto;
    position: fixed;
    top: 0;
    left: 0;
}

.ch-statistics {
    position: relative;
    height: 260rpx;
    text-align: center;
    background-color: #f99f36;
    overflow: auto;
}

.circleback {
    position: absolute;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 260rpx;
    z-index: -1;
}

.ct-text {
    margin-top: 35rpx;
    font-size: 30rpx;
}

.ct-num {
    margin-top: 5rpx;
    font-size: 48rpx;
}

.ch-half {
    display: inline-block;
    width: 352rpx;
    height: 95rpx;
    background: rgba(255,255,255,0.6);
    border-radius: 10rpx 10rpx 0 0;
    color: #666666;
    position: absolute;
    bottom: 0;
}
.selected{
    height: 110rpx;
    color: #202020;
}
.selected .ch-name{
    margin-top: 14rpx;
}
.ch-left{
    float: left;
    left: 20rpx ;
}
.ch-right{
    float: right;
    right: 20rpx;
}
.ch-name {
    margin-top: 7rpx;
    font-size: 28rpx;
}

.ch-num {
    font-size: 36rpx;
}

.unit::after {
    content: '（元）';
    font-size: 22rpx;
}

.top{
    width: 750rpx;
    height: 80rpx;
    background: #FFFFFF;
    position: fixed;
    top: 0;
    margin-top: 260rpx;
}
.top-left{
    width: 33.33%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #202020;
    font-size: 30rpx;
    float: left;
}
.line{
    width: 33.33%;
    height: 2rpx;
    transition: all 0.3s ease-in-out;
    position: absolute;
    bottom: 0;
    display: block;

}
.line s{
    width: 80%;
    height: 2rpx;
    background: #E61F18;
    margin:  0 auto;
    display: block;
}
.top-left:nth-of-type(1).active~.line{
    transform: translate3d(0,0,0);
}
.top-left:nth-of-type(2).active~.line{
    transform: translate3d(100%,0,0);
}
.top-left:nth-of-type(3).active~.line{
    transform: translate3d(200%,0,0);
}
.active{
    color: #E61F18;
}
.redHint{
    width: 750rpx;
