/* pages/boss/earnings/earnings.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #F7F7F7;
}
.title{
    color: #202020;
    font-size: 32rpx;
    text-align: center;
    width: 750rpx;
    height: 72rpx;
    line-height: 72rpx;
}
.list{
    width: 750rpx;
    height: auto;
    overflow: auto;
}
.list-one{
    width: 750rpx;
    height: 160rpx;
    background-color: #fff;
    margin-bottom: 1rpx;
    display: flex;
    -webkit-display:flex;
    align-items: center;
}
.touxiang{
    height: 100%;
    width: 134rpx;
    box-sizing: border-box;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.touxiang image{
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    background-color: #fdedb5;
}
.one-info{
    height: 100%;
    width: auto;
}
.one-title{
    font-size:28rpx ;
    color: #202020;
    margin-top: 23rpx;
    margin-bottom: 8rpx;
}
.one-title text{
    font-size: 28rpx;
    color: #404040;
}
.order,.shouyi{
    color: #666666;
    font-size: 26rpx;
    margin-bottom: 8rpx;
}
.order text,.shouyi text{
    color: #202020;
}
.top{
    width: 750rpx;
    height: 80rpx;
    background: #FFFFFF;
    position: relative;
}
.top-left{
    width: 50%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #202020;
    font-size: 30rpx;
    float: left;
}
.line{
    width: 50%;
    height: 2rpx;
    transition: all 0.3s ease-in-out;
    position: absolute;
    bottom: 0;
    display: block;

}
.line s{
    width: 30%;
    height: 2rpx;
    background: #E61F18;
    margin:  0 auto;
    display: block;
}
.top-left:nth-of-type(1).active~.line{
     transform: translate3d(0,0,0);
 }
.top-left:nth-of-type(2).active~.line{
    transform: translate3d(100%,0,0);
}
.active{
    color: #E61F18;
}