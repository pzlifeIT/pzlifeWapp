/* pages/task/task.wxss */

page {
    background-color: #f7f7f7;
}

.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 260rpx;
}

.header-mat {
    width: 750rpx;
    height: 260rpx;
}

.header-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 260rpx;
    z-index: -1;
}

.header-con {
    display: inline-block;
    width: 50%;
    color: #fff;
}

.header-con text {
    display: block;
    width: 100%;
    text-align: center;
}

.header-con text:nth-child(1) {
    margin-top: 80rpx;
    font-size: 26rpx;
}

.header-con text:nth-child(2) {
    line-height: 100rpx;
    font-size: 48rpx;
}

.item-header {
    width: 730rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin: 10rpx auto 0;
    background-color: #fff;
    font-size: 24rpx;
    color: #202020;
}

.name,
.totalTarget,
.completeTarget,
.bonus,
.status {
    display: inline-block;
    text-align: center;
}

.name {
    width: 210rpx;
}

.totalTarget {
    width: 100rpx;
}

.completeTarget {
    width: 140rpx;
}

.bonus {
    width: 140rpx;
}

.status {
    width: 140rpx;
}

.item-li {
    display: block;
    width: 730rpx;
    margin: 0 auto;
    background-color: #fff;
    border-top: 1px solid #f7f7f7;
    overflow: auto;
}

.item-li .name,
.item-li .totalTarget,
.item-li .completeTarget,
.item-li .bonus,
.item-li .status {
    float: left;
    min-height: 110rpx;
}

.item-li .totalTarget,
.item-li .completeTarget,
.item-li .bonus {
    color: #202020;
    line-height: 110rpx;
}

.item-name,
.item-date {
    width: 100%;
    line-height: 46rpx;
    text-align: center;
    font-size: 28rpx;
    color: #202020;
}

.item-date {
    line-height: 36rpx;
    font-size: 20rpx;
}

.item-li .name {
    overflow: auto;
}

.settlement {
    width: 100%;
    height: 45rpx;
    margin-bottom: 10rpx;
    overflow: auto;
    display: flex;
    justify-content: center;
    align-items: center;
}

.settlement text {
    display: inline-block;
    height: 32rpx;
    line-height: 32rpx;
    font-size: 26rpx;
    color: #666;
    margin-left: 8rpx;
}

.tk-btn {
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    margin: 30rpx auto 0;
}

.ongoing {
    background-color: #ff0000;
}

.failure {
    background-color: #666666;
}

.success {
    background-color: #60c34e;
}