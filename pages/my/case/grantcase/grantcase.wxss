/* pages/my/case/grantcase/grantcase.wxss */
.caseTotal,.onePeople{
	width: 750rpx;
	height: 80rpx;
	font-size: 30rpx;
	line-height: 80rpx;
	display: flex;
	align-items: center;
	position: relative;
}
text:nth-child(1){
	color: #888;
	display: inline-block;
	margin-left: 10rpx;
}
text:nth-child(2){
	color: #404040;
	display: inline-block;
	position: absolute;
	right: 10rpx;
}
input{
	width: 68%;
	display: inline-block;
	text-align: right;
	margin-right: 10rpx;
}


.button{
	background: #E61F18;
	width: 750rpx;
	height: 92rpx;
	text-align: center;
	line-height: 92rpx;
	color: #fff;
	font-size: 28rpx;
	position: fixed;
	bottom: 0;
}





