/* pages/my/case/case.wxss */
page{
	background: #F7F7F7;
	height: 100%;
}
.balance{
	width: 750rpx;
	height: 260rpx;
	background-repeat: none;
	background-size: 750rpx 240rpx;
	overflow: hidden;
	position: fixed;
	top: 0;
	z-index: 1;
}
.balance image{
	width: 750rpx;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
}
.balance-text{
	width: 750rpx;
	overflow: hidden;
	text-align: center;
	font-size: 26rpx;
	color: #fff;
	margin-top: 38rpx;
}
.total text , .used text,.three-total text,.three-used text{
	font-size: 22rpx;
}
.two{
	width: 750rpx;
	height: auto;
}
.balance-num{
	width: 750rpx;
	overflow: hidden;
	text-align: center;
	font-size: 60rpx;
	color: #fff;
	margin-top: 10rpx;
}
.balance-num text{
	font-size: 22rpx;
	display: inline-block;
	margin-left:11rpx ;
}
.total,.used{
	width: 50%;
	display: inline-block;
	text-align: center;
	font-size: 28rpx;
	color: #fff;
	margin-top: 10rpx;
}
.three{
	width: 750rpx;
	height: auto;
}
.three-total,.three-used{
	width: 33.33%;
	display: inline-block;
	text-align: center;
	font-size: 28rpx;
	color: #fff;
	margin-top: 10rpx;
}
.button{
	width: 750rpx;
	height: 92rpx;
	background: #F2B063;
}
.left,.right{
	width: 373rpx;
	height: 92rpx;
	background: #f2b063;
	text-align: center;
	line-height: 92rpx;
	color: #fff;
	font-size: 28rpx;
	display: inline-block;
}
.left{
	border-right: 1rpx solid #fff;
}
.right{
	border-left: 1rpx solid #fff;
}
.detail{
	width: 750rpx;
	height: 100%;
	margin-top: 328rpx;
	overflow: auto;
}
.detail-list{
	margin-top: 328rpx;
}
.detail-head{
	background: #F7F7F7;
	height: 68rpx;
	width: 750rpx;
	text-align: center;
	line-height: 68rpx;
	color: #202020;
	font-size: 32rpx;
	margin-top: 260rpx;
	position: fixed;
	top: 0;
	z-index: 1;
}
::-webkit-scrollbar {
    width: 0px;
    height: 0px;
    color: transparent;
}

::-webkit-scrollbar-track {
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: #f7f7f7;
}
.detail-one{
	width: 750rpx;
	height: 180rpx;
	border-bottom: 1rpx solid #F7F7F7;
	background: #fff;
}
.detail-doim{
	width: 750rpx;
	height: auto;
	overflow: auto;
	background: #FFFFFF;
	padding: 0 10rpx;
	box-sizing: border-box;
	margin-bottom: 2rpx;
}
.one-line{
	width: 100%;
	height: auto;
	overflow: auto;
	margin-top: 20rpx;
	margin-bottom: 8rpx;
}
.detail-title{
	display: block;
	float: left;
	color: #202020;
	font-size: 30rpx;
	white-space: nowrap;
	width: auto;
	height: auto;
}
.detail-money{
	display:block;
	font-size: 32rpx;
	color: #404040;
	float: right;
	white-space: nowrap;
}
.detail-money text{
	font-size: 22rpx;
}
.detail-total{
	color: #666;
	font-size: 26rpx;
	margin-bottom: 8rpx;
}
.dt:after{
	content: " (待入账)";
	font-size: 26rpx;
}
.dm:after{
	content: " 元";
	font-size: 22rpx;
}
.detail-order{
	font-size: 26rpx;
	color: #666666;
	line-height: 34rpx;
	margin-bottom: 8rpx;
}
.detail-order image{
	float: right;
	width: 14rpx;
	height: 24rpx;
}
.detail-time{
	font-size: 26rpx;
	color: #666666;
	margin-bottom: 8rpx;
}
.list-left{
	width: 70%;
	height: 150rpx;
	margin-left: 12rpx;
	padding-top: 30rpx;
	float: left;
}
.list-left .title{
	color: #202020;
	font-size: 30rpx;
	margin-bottom: 12rpx;
}
.list-left .order{
	color: #666;
	font-size: 24rpx;
	margin-bottom: 12rpx;
}
.list-left .time{
	color: #666;
	font-size: 24rpx;
}
.list-right{
	width: 28%;
	height: 180rpx;
	float: right;
	color: #202020;
	font-size: 28rpx;
	text-align: center;
	line-height: 180rpx;
}
.active{
	color: #E61F18;
}
.not{
	width: 750rpx;
	height: 70%;
	overflow: hidden;
	display: flex;
	justify-content: center;	
	align-items: center;
}
.not-case{
	width: 199rpx;
	overflow: hidden;
}
.not image{
	width: 199rpx;
	height: 138rpx;
	margin-bottom: 29rpx;
}
.not .text{
	width: 199rpx;
	overflow: hidden;
	text-align: center;
	color: #D6D6D6;
	font-size: 28rpx;
}














