<!--pages/voiceList/voiceList.wxml-->
<view class="banner">
    <swiper autoplay>
        <swiper-item>
            <image  class="img" src=""></image>
        </swiper-item>
    </swiper>
</view>
<view class="list">
    <block wx:for="123456">
    <view class="voice">
        <view class="voice-logo">
            <image class="logo"></image>
        </view>
        <view class="voice-info">
            <view class="info-left">
                <view class="name">《听一 那样说》</view>
                <view class="sub_name"> 成功与信服系列</view>
                <view class="price">
                    <text>￥1</text>
                    <text>钻石再补贴</text>
                    <text>8.00</text>
                </view>
            </view>
        </view>
        <image wx:if="{{head == 2}}" class="lose" lazy-load src="{{imgHost}}lose.png"></image>
    </view>
    </block>
</view>