<!--pages/category/category.wxml-->
<view class='search_head'>
	<navigator url="/pages/search/search" hover-class="none">
		<view class='search'>
			<icon type='search' class='search_icon fl' size='34rpx'/>
			<text class="search_cate din fl" >搜索品质生活方案</text>
		</view>
	</navigator>
</view>
<view class='cate_content'>
  <scroll-view scroll-y="true" scroll-top="0" class='cate_left'>
		<view class='cate_text {{item.id == ind?"active":""}}' id="{{ind}}" wx:for='{{firstSub}}' wx:key='{{item.id}}' bindtap='selectSub' data-sub-id="{{item.id}}">
		  <text class=''>{{item.subject}}</text>
		</view>
    <view class='cate_text {{item.id==idx?"active":""}}' wx:for='{{firstCate}}' wx:key='{{item.id}}' bindtap='selectCate' data-cate-id="{{item.id}}">
      <text class=''>{{item.type_name}}</text>
    </view> 
  </scroll-view>

  <scroll-view scroll-y="true" scroll-top="0" class='cate_right'>		
		<view class='wai' wx:for='{{showSub}}' wx:key='{{item.id}}'>
		  <view class='cate_two'>
		    <view><text class='cate_title'>{{item.subject}}</text></view>
		    <navigator url='goods/goods?sub_id={{item.id}}' wx:for="{{item._child}}" hover-class="none">
		      <view class='cate_three' >
		        <image lazy-load="true" class='cate_banner' src='{{item.goods_subject_image}}'></image>
		        <text class='cate_three_title'>{{item.subject}}</text>
		      </view>
		   </navigator>
		  </view>
		</view>
  </scroll-view>
</view>
