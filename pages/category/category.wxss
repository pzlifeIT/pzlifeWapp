/* pages/category/category.wxss */

page {
    height: 100%;
    overflow: hidden;
}

.search_head {
    height: 80rpx;
    margin-bottom: 10rpx;
    overflow: auto;
    border-bottom: 1rpx solid #f7f7f7;
}

.search {
    width: 710rpx;
    height: 60rpx;
    margin: 10rpx auto;
    border-radius: 2rpx;
    background-color: #f7f7f7;
}

.search .search_icon {
    margin: 13rpx 8rpx 13rpx 215rpx;
}

.search_cate {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    color: #b6b6b6;
}

.cate_content {
    height: calc(100% - 91rpx);
    overflow: auto;
}

.cate_left {
    width: 180rpx;
    height: 100%;
    float: left;
    overflow: auto;
}

::-webkit-scrollbar {
    width: 0px;
    height: 0px;
    color: transparent;
}

::-webkit-scrollbar-track {
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: #f7f7f7;
}

.cate_text {
    width: 180rpx;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 28rpx;
    color: #7E7E7E;
    margin-bottom: 1px;
    text-align: center;
    background-color: #F7F7F7;
    overflow: hidden;
}

.cate_text.active {
    color: #e61f18;
    border-left: #e61f18 solid 8rpx;
    background-color: #fff;
}

.cate_right {
    width: 530rpx;
    float: left;
    margin: 0 20rpx;
    height: 100%;
    overflow: auto;
}

.cate_two {
    width: 100%;
    /* height: 80%; */
    /* margin-bottom: 20rpx; */
}

.wai {
    width: 100%;
    float: left;
    margin-top: 20rpx;
}

.cate_title {
    font-size: 28rpx;
    color: #202020;
	display: inline-block;
	background: #fff;
	width: 150rpx;
}

.cate_three {
    width: 166rpx;
    float: left;
    margin: 5rpx 5rpx;
}

.cate_banner {
    display: inline-block;
    float: left;
    width: 113rpx;
    height: 113rpx;
    margin: 0 27rpx;
}

.cate_three_title {
    display: inline-block;
    width: 100%;
    font-size: 26rpx;
    color: #666;
    text-align: center;
}
.sub_title{
	text-align: center;
	position: relative;
	margin: 20rpx 0;
}
.sub_title::after{
	border-bottom:2rpx solid #F7F7F7 ;
}
.line{
	width: 70%;
	height: 2rpx;
	background: #B6B6B6;
	margin: 0 auto;
	position: absolute;
	top: 55%;
	left: 15%;
	z-index: -1;
}
