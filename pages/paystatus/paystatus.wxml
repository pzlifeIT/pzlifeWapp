<view class="status">
	<view class="pay-status fail" wx:if="{{status == 2}}">支付失败</view>
	<view class="pay-status success" wx:if="{{status == 1}}">支付成功</view>
	<view class="botton">
		<view class="bo-left">查看订单</view>
		<view class="bo-right" wx:if="{{status == 2}}">重新支付</view>
		<view class="bo-right" wx:if="{{status == 1}}">返回首页</view>
	</view>
</view>
