	<view class="address">
		<view class="name-phone">
			<text class="name">鲜鲜</text>
			<text class="phone">13865264587</text>
		</view>
		<view class="add-detail">上海市静安区石门二路333弄3号楼17c上海市静安区石门二路333弄3号楼17c</view>
		<view class="money">
			<text class="mon-text">实付：</text>
			<text class="price">￥69.00</text>
