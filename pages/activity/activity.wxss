/* pages/activity/activity.wxss */

page {
    width: 100%;
    height: 100%;
    /* background:#888888; */
}

.bg {
    width: 100%;
    height: 100%;
    margin-top: 140rpx;
}

.bg image {
    width: 100%;
    display: block;
}

.nomember01 {
    height: 1061rpx;
}

.nomember02 {
    height: 1238rpx;
}

.mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    z-index: 99;
}

.shou {
    width: 124rpx;
    height: 121rpx;
    position: absolute;
    right: 180rpx;
    top: 10rpx;
    z-index: 999;
    opacity: 1;
}

.text {
    width: 347rpx;
    height: 219rpx;
}

.centert {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    position: relative;
    z-index: 99999;
}

.button {
    border: 2rpx solid #fff;
    width: 224rpx;
    height: 88rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
}

.button view {
    border: 2rpx solid #fff;
    width: 212rpx;
    height: 76rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
}

.pop {
    width: 580rpx;
    height: 424rpx;
    background: #fff;
    position: relative;
    z-index: 999;
}

.content {
    margin: 50rpx 34rpx 67rpx 34rpx;
    font-size: 30rpx;
    color: #202020;
    line-height: 45rpx;
}

.phone {
    margin: 18rpx auto;
    width: 269rpx;
    height: 70rpx;
    background: #E61F18;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 70rpx;
}

.pop-button {
    width: 100%;
    height: 100rpx;
    position: absolute;
    bottom: 0;
    z-index: 999;
}

.button-left,
.button-right {
    width: 50%;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #D6D6D6;
    display: inline-block;
}

.button-left {
    color: #404040;
    border-right: 1rpx solid #D6D6D6;
}

.button-right {
    color: #E61F18;
}

.pop-isvip {
    width: 638rpx;
    height: 637rpx;
    background: #fff;
    position: relative;
}

.pop-isvip .hint {
    width: 100%;
    height: 100%;
}

.isvip-phone {
    margin: 0 auto;
    position: absolute;
    bottom: 87rpx;
    left: 180rpx;
}

.cha {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    bottom: 180rpx;
}

.type {
    text-align: center;
}

.poptype {
    height: 300rpx;
}