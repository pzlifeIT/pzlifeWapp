/* pages/coupon/coupon.wxss */

page{
    width: 100%;
    /* height: 100%; */
    background: #F7F7F7;
}

.coupon-list{
    width: 750rpx;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    align-items: center;
}
.getCoupon{
    width: 690rpx;
    height: 80rpx;
    background: #fff;
    display: flex;
    /* justify-content: center; */
    align-items: center;
    padding: 0 30rpx;
    position: relative;
    margin-top: 2rpx;
}
.coupon-icon{
    width: 40rpx;
    height: 32rpx;
}
.get-text{
    color: #404040;
    font-size: 30rpx;
    margin-left: 10rpx;
}
.jt-icon{
    width: 13rpx;
    height: 23rpx;
    position: absolute;
    right: 20rpx;
}
.coupon{
    width: 710rpx;
    height: 221rpx;
    margin-top: 20rpx;
    position: relative;
    box-shadow:  0 5rpx 20rpx  rgba(0,0,0,.09);
    border-radius: 20rpx;
}
.left{
    width: 100%;
    height: 100%;
    background: #fff;
    border-radius: 20rpx;
    margin-right: 2rpx;
    text-align: center;
    position: absolute;
    left: 0rpx;
    top: 0;
    z-index: 10;
}
.left-top{
    width: 100%;
    display: flex;
    align-items: center;
}
.lt-left{
    width: 206rpx;
    margin-left: 10rpx;
    position: relative;
}
.left-bottom{
    color: #e61f18;
    font-size: 26rpx;
    text-align: center;
    width: 100%;
}
.radio{
    position: absolute;
    top: 17rpx;
    right: 25rpx;
    z-index: 30;

}
.symbol{
    color: #e61f18;
    font-size: 34rpx;
    font-weight: bold;
    position: absolute;
    top: 30rpx;
    right: 0;
}
.price{
    color: #e61f18;
    font-size: 120rpx;
    font-weight: bold;
}
.left .rule{
    color: #404040;
    font-size: 26rpx;
    /* margin-top: 12rpx; */
}
.lt-mid{
    width: 0rpx;
    height: 110rpx;
    border: 1rpx solid #c86076;
    margin-left: 10rpx;
}
.lt-right{
    padding-left: 29rpx;
    padding-right: 20rpx;
    max-width: 424rpx;
    box-sizing: border-box;
}
.coupon-title,.coupon-desc{
    color: #666666;
    font-size: 30rpx;
    text-align: left;
}
.coupon-desc{
    margin-top: 20rpx;
}
.right{
    width: 126rpx;
    height: 100%;
    background-image: linear-gradient(-90deg,
    #8299ff 0%,
    #8299ff 60%,
    #5274f5 100%);
    /*background: #ff7749;*/
    color: #fff;
    font-size: 28rpx;
    writing-mode: vertical-lr;
    padding:48rpx 0 0 60rpx ;
    border-radius: 0 20rpx 20rpx 0;
    box-sizing: border-box;
    position: absolute;
    right: 0;
    top: 0;
    /*text-align: center;*/
}
.left::before{
    width: 46rpx;
    height: 46rpx;
    content: "";
    border-radius: 100%;
    /*border-right: 1rpx solid rgba(220,220,220,.3);*/
    position: absolute;
    top: 79rpx;
    left: -23rpx;
    z-index: 20;
    background: #F7F7F7;
}
.left::after{
    width: 46rpx;
    height: 46rpx;
    content: "";
    border-top-left-radius: 100%;
    border-bottom-left-radius: 100%;
    /*border-left: 1rpx solid rgba(220,0,0,.1);*/
    position: absolute;
    top: 79rpx;
    right: -23rpx;
    z-index: 20;
    background: #f7f7f7;
}
.left-circle,.right-circle{
    width: 46rpx;
    height: 46rpx;
    background: #f7f7f7;
    position: absolute;
    top: 79rpx;
}
.left-circle{
    left: -23rpx;
    box-shadow:  0 5rpx 20rpx  rgba(247,247,247,.8) inset;
    border-top-right-radius: 100%;
    border-bottom-right-radius: 100%;
}
.right-circle{
    right: -23rpx;
    /*box-shadow:  -5rpx 0rpx 20rpx  rgba(200,200,200,.3) inset;*/
    /*border-left: 1rpx solid rgba(247,247,247,1);*/
    border-top-left-radius: 100%;
    border-bottom-left-radius: 100%;
}
.used{
    color: #d6d6d6;
}
.bg-used{
    background: #d6d6d6;
    color: #fff;
}
.none{
    padding: 75rpx 0 0 65rpx;
}
.over .symbol,.over .price{
    color: #ddd;
}
.not{
    width: 100%;
    height: 70%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 300rpx;
}
.not-coupon{
    width: 208rpx;
    overflow: hidden;
}
.not-coupon image{
    width: 208rpx;
    height: 140rpx;
    margin-bottom: 32rpx;
}
.not-coupon .not-text{
    text-align: center;
    color: #888;
    font-size: 28rpx;
    margin-bottom: 19rpx;
}
.not-coupon .button{
    width: 204rpx;
    height: 66rpx;
    border: 1rpx solid #E61F18;
    text-align: center;
    line-height: 68rpx;
    color: #E61F18;
    font-size: 28rpx;
}
.lone{
    max-width: 300rpx;
}
.lo{
    padding-right:46rpx;
    /*box-sizing: border-box;*/
}
.footer{
    width: 750rpx;
    height: 130rpx;
    background: #FFFFFF;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99;
}
.no{
    height: 100rpx;
    width: 710rpx;
    text-align: center;
    position: absolute;
    top: -5rpx;
    left: 20rpx;
    font-size: 30rpx;
    color: #E61F18;
    line-height: 100rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
    margin-top: 20rpx;
    box-shadow: 0 0rpx 10rpx rgba(0,0,0,.2);
    z-index: 100;
}
.no-radio{
    top: 0;
}
.empty{
    width: 750rpx;
    height: 150rpx;
}
::-webkit-scrollbar{
    background: transparent;
}