<!--pages/comfirOrder/comfirOrder.wxml-->
<view class='addres nullad' wx:if="{{siteid == ''}}" bindtap="selsite"  >
  <view >
    <text class="ad-hint din" >你的收货地址为空，点击添加收货地址</text>
    <image lazy-load="true" class="jt" src="{{imgHost}}jt_18.png" />
  </view>
  <image lazy-load="true" class='blue_red' src='{{imgHost}}add.png'></image>
</view>

<view class='addres' wx:else bindtap="selsite">
  <view class='addres_outer'>
    <view class='name_phone'>
      <text class='name'>{{site.name}}</text>
      <text class='phone'>{{site.mobile}}</text>
    </view>
    <view class='addres_detail'>
      <text class='default'>默认</text>
      <text class='location'>{{site.province_name}} {{site.city_name}} {{site.area_name}} {{site.address}}</text>
    </view> 
  </view>
  <view class='jt'>
    <image lazy-load="true" src='{{imgHost}}jt_18.png'></image>
  </view>
  <image lazy-load="true" class='blue_red' src='{{imgHost}}add.png'></image>
</view>

<view class='goods'>
  <view wx:for="{{datalist}}" >
    <view class="s-name" ><image lazy-load="true" class="icon-img fl" src="{{item.image}}" /> <text >{{item.name}}</text> </view>
    <view wx:for="{{item.shop_list}}" >
      <view class="s-name"><image lazy-load="true" class="icon-img fl" src="{{item.shop_image}}" /> <text >{{item.shop_name}}</text></view>
      <view wx:for="{{item.goods_list}}" >
        <view class='goods_info' >
          <view class='goods_img'><image lazy-load="true" src='{{item.sku_image}}'></image></view>
          <view class='goods_detail'>
            <text class='goods_title'>{{item.goods_name}}</text>
            <text class='goods_subtitle'>{{item.attr}}</text>
            <text class='price'>￥{{item.retail_price}}</text>
          </view>
          <view class='sum'>x{{item.buySum}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
<view class='stat'>
  <view class='summation'><text class='sum_text'>含运费</text><text class='sum_price'>￥{{stat.total_freight_price}}</text></view>
  <view class='summation'><text class='sum_text'>钻石返利</text><text class='sum_price'>￥{{stat.rebate_all}}</text></view>
  <view class='summation'><text class='sum_text'>共计{{stat.goods_count}}件商品</text><text class='sum_price'>合计￥{{stat.total_goods_price}}</text></view>
</view>

<view class='footer'>
  <view class='total'><text class='total_text'>总计金额：</text><text class='total_price'>￥{{stat.total_price}}</text></view>
	<navigator hover-class="none" open-type="navigateBack" delta="1">
  <view class='back'>
    <image lazy-load="true" src='{{imgHost}}che.png'></image>
    <text>返回购物车</text>
  </view>
	</navigator>
  <view class='pay' bindtap="showaddres" >去付款</view>
</view>

<view class="hint-popup" wx:if="{{addressshow}}">
  <view class="fill" bindtap="hideaddress" ></view>
  <view class="hp-cen" >
    <view class="b_xie" ><image lazy-load="true" class="b-image" src="{{imgHost}}b_xie.png" /></view>
    <view class="hp-con" >
      <view class="hp-info" >
        <text class="hp-info-name">{{site.name}}</text>
        <text class="hp-info-moblie">{{site.mobile}}</text>
      </view>
      <view class="hp-address" >{{site.province_name}} {{site.city_name}} {{site.area_name}} {{site.address}}</view>
    </view>
    <view >
      <button class="hp-else din fl" plain="true" bindtap="selsite"  >选择其他</button>
      <button bindtap="showbuypup" class="hp-confirm din fl" >确定</button>
    </view>
  </view>
</view>

<view class="cobuy" wx:if="{{buypup}}">
  <view class="fill" bindtap="hidepay" ></view>
  <view class="buymoney">
    <view class="bm-tit" >支付方式</view>
    <view class="bm-mode" bindtap="selpaytype"  data-type="2">
      <view class="din fl" ><image lazy-load="true" class="buyIcon" src="{{imgHost}}pay_03.png" /></view>
      <view  class="bm-info din fl" >
        <text class="db">商票抵扣</text>
        <text class="db bm-balance">余额: ￥{{stat.balance}} </text>
      </view>
      <view  class="din fr" >
        <icon class="bm-btn" wx:if="{{paytype == 2}}" type="success" size="50rpx" />
        <view class="bm-btn no-btn" wx:else ></view>
      </view>
    </view>
    <view class="bm-mode" bindtap="selpaytype"  data-type="1">
      <view class="din fl" ><image lazy-load="true" class="buyIcon" src="{{imgHost}}pay_08.png" /></view>
      <view class="bm-info din fl" >
        <text class="db">微信支付</text>
      </view>
      <view class=" din fr" >
        <icon class="bm-btn" wx:if="{{paytype == 1}}" type="success" size="50rpx" />
        <view class="bm-btn no-btn" wx:else  ></view>
      </view>
    </view>
    <view class="bm-affirm">
      <view class="bm-money fl" >
        <view class="din hb fl" wx:if="{{paytype == 2}}"  >商票<text>￥<text class="moneynum">{{paymoney.redmoney}}</text></text></view>
        <view class="din wxmoney fr">微信<text>￥<text class="moneynum">{{paymoney.wxpay}}</text></text></view>
      </view>
      <view bindtap="gobuy" class="ba-btn din fr" >去付款</view>
    </view>
  </view>
</view>
