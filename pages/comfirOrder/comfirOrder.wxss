/* pages/comfirOrder/comfirOrder.wxss */
page{
  background-color: #f7f7f7;
}
.addres{
  margin-top: 2rpx;
  width: 731rpx;
  height: 150rpx;
  position: relative;
  padding:37rpx 10rpx 0 9rpx;
  background: #ffffff;
}
.addres::after{
  background-image: url("/pages/images/images/add.png");
  /* content: "123"; */
}
.addres_outer{
  display: inline-block;
}
.addres .name_phone{
  font-size: 30rpx;
  color: #404040; 
}
.name_phone .name{
  margin-right: 34rpx;
}
.addres_detail .default{
  font-size: 24rpx;
  color: #e61f18;
  display: inline-block;
  width: 62rpx;
  height: 30rpx;
  border-radius: 2px;
  border: 1rpx solid #e61f18;
  text-align: center;
  line-height: 30rpx;
  margin-right: 34rpx;
}
.addres_detail .location{
  font-size: 26rpx;
  color: #888;
}
.jt{
  width: 16rpx;
  height: 30rpx;
  position: absolute;
  right: 10rpx;
  top: 35%;
}
.jt image{
  width: 100%;
  height: 100%;
}
.blue_red{
  height: 6rpx;
  width: 750rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.goods_info{
  width: 750rpx;
  height: 216rpx;
  background-color: #ffffff;
  margin-top: 10rpx;
  position: relative;
}
.goods_img{
  width: 172rpx;
  height: 172rpx;
  display: inline-block;
  margin-top: 22rpx;
  margin-left: 10rpx;
} 
.goods_img image{
  width: 100%;
  height: 100%;
  background: paleturquoise;
}
.goods_detail{
  display: inline-block;
  height: 100%;
  margin-left: 19rpx;
  vertical-align: top;
  padding-top: 41rpx;
}
.goods_detail .goods_title{
  font-size: 30rpx;
  color: #202020;
  display: block;
  margin-bottom: 17rpx;
}
.goods_detail .goods_subtitle{
  font-size: 24rpx;
  color: #888888;
  display: block;
  margin-bottom: 25rpx;
}
.goods_detail .price{
  font-size: 30rpx;
  color: #e61f18;
}
.sum{
  position: absolute;
  right: 10rpx;
  top: 40%;
  font-size: 28rpx;
  color: #404040;
}





