/* pages/search/search.wxss */

page {
	height: 100%;
	overflow: hidden;
}

.search_head {
	height: 80rpx;
	margin-bottom: 10rpx;
	overflow: auto;
	border-bottom: 1rpx solid #f7f7f7;
	position: fixed;
	top: 0;
}

.search {
	width: 644rpx;
	height: 60rpx;
	margin: 10rpx;
	border-radius: 2rpx;
	background-color: #f7f7f7;
	float: left;
}

.search .search_icon {
	margin: 13rpx 8rpx 13rpx 18rpx;
}

.search .search_cate {
	line-height: 60rpx;
	font-size: 30rpx;
	width: 582rpx;
	margin-top: 5rpx;
}

.pl-class {
	font-size: 30rpx;
	color: #B6B6B6;
}
.sea-button{
	height: 60rpx;
	width: 86rpx;
	font-size: 30rpx;
	color: #202020;
	float: left;
	text-align: center;
	line-height: 60rpx;
	margin-top: 10rpx;
}
.history-wai{
	width: 750rpx;
	overflow: hidden;
	margin-top: 90rpx;
}
.history{
	width: 736rpx;
	overflow: hidden;
	padding: 0 7rpx;
	margin-top: 44rpx;
}
.history-head{
	width: 750rpx;
	height: 60rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}
.head-left{
	font-size: 30rpx;
	color: #202020;
	margin-left: 19rpx;
}
.del{
	width: 60rpx;
	height: 60rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	float: right;
}
.del-img{
	width: 25rpx;
	height: 28rpx;
}
.history-list{
	width: 100%;
	overflow: hidden;
}
.history-one{
	height: 48rpx;
	overflow: hidden;
	background: #F7F7F7;
	text-align: center;
	line-height: 48rpx;
	color: #404040;
	font-size: 28rpx;
	margin: 0 15rpx 30rpx 15rpx;
	float: left;
	
}
.text{
	margin: 0 19rpx;
}
.goods{
	overflow: hidden;
	margin-top: 90rpx;
}
.one_goods{
  width: 370rpx;
  height: 386rpx;
  float: left;
  margin: 2rpx;
  background-color: rgb(255, 255, 255)
	
}
.one_goods .goods_img{
  width: 236rpx;
  height: 199rpx;
  
}
.img{
  text-align: center;
  margin-top: 31rpx;
  
}
.one_goods text{
  display: block;
  text-align: center;

}
.one_goods .title{
 font-size: 29rpx;
 color: rgb(34, 34, 34);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.one_goods .subtitle{
  font-size: 24rpx;
  color: rgb(182, 182, 182);
  margin: 5rpx 0 5rpx 0;
}
.one_goods .price{
  font-size: 30rpx;
  color: rgb(230, 31, 24);
}










