 <!--pages/search/search.wxml-->
<view class='search_head'>
  <view class='search'>
    <icon type='search' class='search_icon fl' size='34rpx'/>
    <input class="search_cate din fl" focus="{{true}}" placeholder="搜索品质方案" confirm-type="search" placeholder-class="pl-class" bindinput="inputwacth" />
  </view>
  <view class="sea-button" bindtap="getSearchGoods">
	  搜索
  </view>
</view>
<!-- 搜索历史 -->
<view class="history-wai">
	<view class="history">
		<view class="history-head">
			<text class="head-left">最近搜索</text>
			<view class="del" bindtap="del">
				<image lazy-load="true" class="del-img" src="{{imgHost}}del.png"></image>
			</view>
		</view>
		<view class="history-list">
			<view class="history-one" wx:for="{{searchList}}" wx:key="index" bindtap="clickSearch" data-keyword="{{item}}"><text class="text">{{item}}</text></view>
		</view>
	</view>
</view>
