<view class='goods' wx:for='{{goodsList}}' wx:if="{{goodsList.length>=1}}">
<navigator url='/pages/goods/detail?goodid={{item.id}}' >
  <view class='one_goods'>
    <view class='img'>
      <image class='goods_img' src='{{item.image}}'></image>
    </view> 
    <text class='title'>{{item.goods_name}}</text>
    <text class='subtitle'>{{item.subtitle}}</text>
    <text class='price'>￥{{item.min_retail_price}}</text>
  </view>
</navigator>
</view>