	display: flex;
	justify-content: center;
}
.centert{
	width: 710rpx;
	margin-top: 64rpx;
}
.logo{
	height: 122rpx;
	width: 100%;
	display: flex;
	justify-content: center;
	align-content: center;
	margin-bottom: 100rpx;
}
image{
	width: 266rpx;
	height: 122rpx;
}
.phone{
	width: 710rpx;
	height: 88rpx;
	border-bottom: 2rpx solid #F7F7F7;
}
