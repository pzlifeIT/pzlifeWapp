/* pages/article/article.wxss */
page{
    background: #f7f7f7;
}
.msk{
    width: 750rpx;
    overflow: auto;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    align-items: center;
    margin-top: 140rpx;
}
.one-art{
    width: 730rpx;
    height: auto;
    overflow: auto;
    background: #FFFFFF;
    display: -webkit-flex;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 26rpx 9rpx 11rpx 14rpx;
    box-sizing: border-box;
    margin-top: 10rpx;
}
.article-info{
    width: 491rpx;
    height: 100%;
}
.title{
    font-size: 34rpx;
    font-weight: bold;
    color: #151515;
}
.time{
    font-size: 28rpx;
    color: #a8a8a8;
    margin-top: 27rpx;
}
.goods-img{
    width: 230rpx;
    height: 200rpx;
}