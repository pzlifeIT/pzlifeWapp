<view class="in-slider">
	<view class="header">
		<navigator url='/pages/search/search' hover-class="none">
			<view class="index-search din fl">
				<icon type="search" size="34rpx" color="#fff" />
				<input class="search-inp din fr" type="text" placeholder-class="pla" placeholder="输入您当前要搜索的商品" disabled='disabled' />
			</view>
		</navigator>
	</view>
	<swiper class="slider" autoplay="true" current="0" circular="true" bindchange="swiper">
		<swiper-item class="pz-swiper" wx:for="{{slider.son}}" wx:key="index">
			<image lazy-load="true" src="{{item.image_path}}"></image>
		</swiper-item>
	</swiper>
	<view class="num">{{num}}/{{slider.son.length}}</view>
</view>
<view class="icon">
	<view class="icon-line">
		<view class="icon-one" wx:for="{{icon.son}}">
			<image lazy-load="true" src="{{item.image_path}}"></image>
			<view class="icon-text">{{item.title}}</view>
		</view>
	</view>
</view>
<view class="">
	<view class="double-div">
		<view class="div-left" wx:for="{{sub.son}}">
			<image lazy-load="true" src="{{item.image_path}}"></image>
		</view>
	</view>
</view>
<!-- 新品上市 -->
<view class="newpro">
	<view class="title">
		<view class="newpro-text">{{newGoods.title}}</view>
		<view class="new-more">更多
			<image lazy-load="true" src="{{imgHost}}jt_18.png"></image>
		</view>
	</view>
	<view class="new-one">
		<image lazy-load="true" src="{{newGoods.son[0].image_path}}"></image>
	</view>
	<view class="new-line">
		<view class="new-two">
			<image lazy-load="true" src="{{newGoods.son[1].image_path}}"></image>
		</view>
		<view class="new-two new-mid">
			<image lazy-load="true" src="{{newGoods.son[2].image_path}}"></image>
		</view>
		<view class="new-two">
			<image lazy-load="true" src="{{newGoods.son[3].image_path}}"></image>
		</view>
	</view>
</view>
<!-- 每日轮播 -->
<view>
	<view class="date-banner">
		<image lazy-load="true" src="{{oneDay.son[0].image_path}}"></image>
	</view>
	<view class="goods-content">
		<view class="title">
			<view class="newpro-text">{{hotGoods.title}}</view>
			<view class="new-more">更多
				<image lazy-load="true" src="{{imgHost}}jt_18.png"></image>
			</view>
		</view>
		<view class="one-line">
			<view class="date-left">
				<image lazy-load="true" src="{{hotGoods.son[0].image_path}}"></image>
			</view>
			<view class="date-left date-right">
				<image lazy-load="true" src="{{hotGoods.son[1].image_path}}"></image>
			</view>
		</view>
		<view class="goods-line">
			<view class="goods-one" wx:for="{{hotson}}">
				<image lazy-load="true" src="{{item.image_path}}"></image>
				<view class="goods-title">{{item.title}}</view>
				<view class="goods-price">￥{{item.price}}</view>
				<view class="vipprice">{{item.goods_min_brokerage}}</view>
			</view>
		</view>
	</view>
</view>
<!-- 应季生活推荐 -->
<view class="life-recommend">
	<view class="life-title">
		<image lazy-load="true" src="{{season.image_path}}"></image>
	</view>
	<scroll-view class="life-goods" scroll-x style="width:100%;" scroll-with-animation bindscroll="movescroll">
		<!-- 一列 -->
		<view class="life-goods-column" wx:for="{{season.son}}">
			<!-- 单个商品 -->
			<view class="life-goods-one">
				<image lazy-load="true" src="{{item.image_path}}"></image>
				<view class="life-goods-desc">
					<view class="desc-title">{{item.title}}</view>
					<view class="desc-price">￥{{item.price}}</view>
					<view class="desc-vipprice">{{item.goods_min_brokerage}}</view>
				</view>
			</view>
		</view>
	</scroll-view>
	<!-- <i class="line" style="transform: translateX({{pos_scroll}}rpx);">
		<s></s>
	</i> -->
</view>
<!-- 时令食品推荐 -->
<view class="life-recommend">
	<view class="life-title">
		<image lazy-load="true" src="{{shiling.image_path}}"></image>
	</view>
	<scroll-view class="slsp-recommend" scroll-x="true">
		<view class="slsp-goods-one" wx:for="{{shiling.son}}">
			<image lazy-load="true" src="{{item.image_path}}"></image>
			<view class="desc-title slsp-title">{{item.title}}</view>
			<view class="desc-price slsp-price">￥{{item.price}}</view>
			<view class="desc-vipprice slsp-vipprice">{{item.goods_min_brokerage}}</view>
		</view>
	</scroll-view>
</view>
<!-- 买主代表推荐 -->
<view class="buyer-recommend">
	<view class="title">
		<view class="newpro-text">{{maizhu.title}}</view>
		<view class="new-more">更多
			<image lazy-load="true" src="{{maizhu.image_path}}"></image>
		</view>
	</view>
	<scroll-view class="buyer-img" scroll-x="true">
		<image lazy-load="true" wx:for="{{maizhu.son}}" src="{{item.image_path}}"></image>
	</scroll-view>
</view>
<!-- 安心零食、酒饮、乳品 -->
<view class="one-div" wx:for="{{sub_goods.son}}">
	<view class="goods-content">
		<view class="title">
			<view class="newpro-text">{{item.title}}</view>
			<view class="new-more">更多
				<image lazy-load="true" src="{{imgHost}}jt_18.png"></image>
			</view>
		</view>
		<view class="goods-line">
			<view class="goods-one" wx:for="{{item.third}}" wx:for-item="third">
				<image lazy-load="true" src="{{third.image_path}}"></image>
				<view class="goods-title">{{third.title}}</view>
				<view class="goods-price">￥{{third.price}}</view>
				<view class="vipprice">{{third.goods_min_brokerage}}</view>
			</view>
			<view class="goods-one" >
				<image class="right-bottom-img" lazy-load="true" src="{{item.image_path}}"></image>
			</view>
		</view>
	</view>
</view>
