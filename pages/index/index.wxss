/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.header {
    width: 100%;
    overflow: auto;
    background-color: #f7f7f7;
}

.logo {
    width: 108rpx;
    height: 61rpx;
    margin: 20rpx 0;
}

.index-search {
    width: 606rpx;
    /* height: 60rpx; */
    margin: 20rpx 0;
    background-color: #fff;
    border: 1rpx solid #c9c9c9;
    margin-left: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.index-search icon {
    margin: 13rpx 0 13rpx 21rpx;
}

.index-search .search-inp {
    width: 538rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    background-color: #fff;
    border-left: none;
}

.pz-swiper {
    width: 750rpx;
    height: 375rpx;
}

.pz-swiper image {
    width: 100%;
    height: 375rpx;
}