.continue{
    display: flex;
    justify-content: center;
    align-items: center;
}
.progress{
    display: inline-block;
    width: 500rpx;
    margin: 0 26rpx;
}
.duration:nth-of-type(1),.duration:nth-of-type(2){
    font-size: 24rpx;
    color: #efefef;
}
.buttons{
    width: 750rpx;
    padding: 0 70rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 26rpx;
}
